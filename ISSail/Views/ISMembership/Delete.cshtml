@model ISSail.Models.Membership
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"Delete {Model.Year} {@Context.Session.GetString("memberName")} Membership";
}

<h2>Delete @Context.Session.GetString("memberName") Membership for @Model.Year</h2>

<h3>Are you sure you want to <span class="orange">delete</span> this?</h3>
<div>
    <h4>Membership to delete</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt>
            Membership Type Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MembershipTypeNameNavigation.MembershipTypeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MembershipId" />
        <input type="submit" value="Delete" class="btn-lg btn-danger" /> |
        <a asp-action="Index">Back to Membership List</a>
    </form>
</div>
