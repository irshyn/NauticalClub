@model ISSail.Models.Membership
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"{@Context.Session.GetString("memberName")} Membership Details";
}

<h2>Details of @Context.Session.GetString("memberName") Membership</h2>

<div>
    <h4>Membership Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt>
            Membership Type Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MembershipTypeNameNavigation.MembershipTypeName)
